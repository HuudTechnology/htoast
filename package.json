{
  "name": "htoast",
  "version": "1.0.0",
  "description": "Modern toast notifications for Vue 3 with Tailwind CSS support by Huud Inc.",
  "main": "./dist/htoast.cjs.js",
  "module": "./dist/htoast.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/htoast.es.js",
      "require": "./dist/htoast.cjs.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && node ./build/prepare-types.mjs",
    "dev": "vite build --watch",
    "lint": "eslint . --ext .js,.vue",
    "typecheck": "vue-tsc --noEmit",
    "publish:npm": "npm publish --access public",
    "publish:beta": "npm publish --tag beta --access public"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.0",
    "boxicons": "^2.1.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/test-utils": "^2.4.0",
    "autoprefixer": "^10.4.16",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.31",
    "rollup-plugin-dts": "^6.1.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vue": "^3.4.0",
    "vue-tsc": "^1.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HuudTechnology/htoast.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "toast",
    "notifications",
    "tailwind",
    "htoast"
  ],
  "author": "Huud Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HuudTechnology/htoast/issues"
  },
  "homepage": "https://github.com/HuudTechnology/htoast#readme"
}